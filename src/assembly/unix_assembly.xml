<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>unix</id>
	<formats>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>
	<files>
		<file>
			<source>src/main/resources/config/logicconfig_unix.xml</source>
			<outputDirectory>config</outputDirectory>
			<destName>logicconfig.xml</destName>
		</file>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory>legal</outputDirectory>
			<destName>ASGlogic_LICENSE.txt</destName>
		</file>
		<file>
			<source>NOTICE.txt</source>
			<outputDirectory>legal</outputDirectory>
			<destName>ASGlogic_NOTICE.txt</destName>
		</file>
		<file>
			<source>README.md</source>
			<outputDirectory>readme</outputDirectory>
			<destName>ASGlogic_README.md</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>tools/espresso/espresso</include>
				<include>tools/espresso/LICENSE.ESPRESSO.txt</include>
				<include>tools/mpsat/LICENSE.MPSAT</include>
				<include>tools/mpsat/mpsat</include>
				<include>tools/petrify/LICENSE.PETRIFY.txt</include>
				<include>tools/petrify/petrify</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/desij</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>*:*:tar.gz:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
